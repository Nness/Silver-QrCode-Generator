<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:viewModel="clr-namespace:QrCodeGenerator.ViewModel"
                    xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
                    xmlns:se="http://schemas.microsoft.com/expression/2010/interactions"
                    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit">
    <DataTemplate x:Key="iCalView"
                  DataType="viewModel:iCalViewModel">
        <StackPanel>
            <TextBlock FontWeight="Bold">Summary</TextBlock>
            <TextBox  Width="Auto" TextWrapping="Wrap"
                      Margin="5, 0, 0, 0"
                      Text="{Binding Path=Summary, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged, NotifyOnValidationError=True}"/>
            <TextBlock FontWeight="Bold">Start Time</TextBlock>
            <xctk:DateTimePicker Format="UniversalSortableDateTime"
                                 Margin="5, 0, 0, 0"
                                 Value="{Binding Path=StartTime, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged, NotifyOnValidationError=True}"/>
            <TextBlock FontWeight="Bold">End Time</TextBlock>
            <xctk:DateTimePicker Format="UniversalSortableDateTime"
                                 Margin="5, 0, 0, 0"
                                 Value="{Binding Path=EndTime, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged, NotifyOnValidationError=True}"/>
        </StackPanel>
    </DataTemplate>
</ResourceDictionary>